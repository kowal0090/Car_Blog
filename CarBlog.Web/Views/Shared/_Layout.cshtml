<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div>
        <nav>
            <a asp-controller="Home" asp-action="Index">Start</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="Terenowe">Terenowe</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="Sportowe">Sportowe</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="Rodzinne">Rodzinne</a>
            <a asp-controller="Panel" asp-action="Edit">Stwórz post</a>

            <a asp-controller="Panel" asp-action="index">Panel Administratora</a>

            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Auth" asp-action="Logout">Wyloguj</a>
            }
            else
            {
                <a asp-controller="Auth" asp-action="Login">Logowanie</a>
            }
        </nav>
    </div>

    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", false)
</body>
</html>
